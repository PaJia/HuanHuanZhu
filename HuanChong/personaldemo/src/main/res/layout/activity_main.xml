<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_main_rl1"
    tools:context="com.jiyun.shixun.personaldemo.MainActivity">

    <LinearLayout
        android:id="@+id/ll_gr_ll1"
        android:background="#F9F9F9"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y150">

        <ImageView
            android:id="@+id/iv_gr_back"
            android:src="@mipmap/back_gray"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="个人信息"
            android:textSize="20sp"
            android:layout_marginLeft="@dimen/x310"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:id="@+id/v_gr_view"
        android:background="#66000000"
        android:layout_below="@+id/ll_gr_ll1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:id="@+id/ll_gr_ll2"
        android:background="#F9F9F9"
        android:layout_marginTop="@dimen/y50"
        android:layout_below="@+id/v_gr_view"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y200">
        <TextView
            android:text="头像"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/x50"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@mipmap/user_defaults"
            android:layout_width="@dimen/x130"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x680"
            android:layout_height="@dimen/y130" />
        <ImageView
            android:src="@mipmap/enter"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x30"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/y60" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_gr_ll3"
        android:background="#F9F9F9"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/ll_gr_ll2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y130">
        <TextView
            android:text="名称"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/x50"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:src="@mipmap/enter"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x840"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/y60" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_gr_ll4"
        android:background="#F9F9F9"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/ll_gr_ll3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y130">
        <TextView
            android:text="性别"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/x50"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:src="@mipmap/enter"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x840"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/y60" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_gr_ll5"
        android:background="#F9F9F9"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/ll_gr_ll4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y130">
        <TextView
            android:text="出生日期"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/x50"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:src="@mipmap/enter"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x750"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/y60" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_gr_ll6"
        android:background="#F9F9F9"
        android:layout_marginTop="@dimen/y50"
        android:layout_below="@+id/ll_gr_ll5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y130">
        <TextView
            android:text="手机"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/x50"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:src="@mipmap/enter"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x840"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/y60" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_gr_ll7"
        android:background="#F9F9F9"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/ll_gr_ll6"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y130">
        <TextView
            android:text="微信"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/x50"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:src="@mipmap/enter"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x840"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/y60"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_gr_ll8"
        android:background="#F9F9F9"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/ll_gr_ll7"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y130">
        <TextView
            android:text="QQ"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/x50"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="未完善信息"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/x630"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@mipmap/enter"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x10"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/y60" />
    </LinearLayout>

     <LinearLayout
        android:id="@+id/ll_gr_ll9"
        android:background="#F9F9F9"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/ll_gr_ll8"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y130">
        <TextView
            android:text="联系地址"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/x50"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:src="@mipmap/enter"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x750"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/y60" />
    </LinearLayout>
</RelativeLayout>
