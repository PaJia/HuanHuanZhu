<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="#F9F9F9"
    tools:context="com.jiyun.shixun.personaldemo.LianXiDiZhiActivity">

    <LinearLayout
        android:id="@+id/ll_lxdz_ll1"
        android:background="#F9F9F9"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y150">

        <ImageView
            android:id="@+id/iv_lxdz_back"
            android:src="@mipmap/back_gray"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="联系地址"
            android:textSize="20sp"
            android:layout_marginLeft="@dimen/x310"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_lxdz_submit"
            android:text="提交"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x290"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:id="@+id/v_lxdz_view1"
        android:background="#66000000"
        android:layout_below="@id/ll_lxdz_ll1"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:id="@+id/ll_lxdz_ll2"
        android:background="#fff"
        android:layout_below="@+id/v_lxdz_view1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y150">
        <TextView
            android:text="城市"
            android:textSize="18sp"
            android:layout_marginLeft="@dimen/x50"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:src="@mipmap/enter"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x840"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/y60" />
    </LinearLayout>

    <View
        android:id="@+id/v_lxdz_view2"
        android:background="#33000000"
        android:layout_below="@id/ll_lxdz_ll2"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout

        android:id="@+id/ll_lxdz_ll3"
        android:background="#ffffff"
        android:layout_below="@+id/v_lxdz_view2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y150">
        <TextView
            android:text="具体地址"
            android:textSize="18sp"
            android:layout_marginLeft="@dimen/x50"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/et_lxdz_edit"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x60"
            android:layout_width="@dimen/x700"
            android:background="@null"
            android:textSize="16sp"
            android:hint="输入具体街道-小区-栋-号"
            android:textColorHint="#33000000"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
