<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jiyun.shixun.personaldemo.WeiXinActivity">

    <LinearLayout
        android:id="@+id/ll_wx_ll1"
        android:background="#F9F9F9"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y150">

        <ImageView
            android:id="@+id/iv_wx_back"
            android:src="@mipmap/back_gray"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="微信"
            android:textSize="20sp"
            android:layout_marginLeft="@dimen/x380"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_wx_submit"
            android:text="提交"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x330"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:id="@+id/v_wx_view1"
        android:background="#66000000"
        android:layout_below="@id/ll_wx_ll1"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <EditText
        android:id="@+id/et_wx_edit"
        android:layout_below="@+id/ll_wx_ll1"
        android:layout_width="match_parent"
        android:background="@null"
        android:paddingLeft="@dimen/x50"
        android:hint="输入微信账号"

        android:layout_height="@dimen/y180" />
</RelativeLayout>
