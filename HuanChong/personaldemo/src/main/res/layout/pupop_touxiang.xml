<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rl_tx_popup"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_tx_ll1"
        android:orientation="vertical"
        android:background="@drawable/info_et"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:background="#fff"
            android:id="@+id/tv_tx_text1"
            android:text="更换用户头像"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y150" />
        <View
            android:id="@+id/v_tx_view1"
            android:background="#33000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:background="#fff"
            android:id="@+id/tv_tx_text2"
            android:text="拍照"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#007AFF"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y150" />
        <View
            android:id="@+id/v_tx_view2"
            android:background="#33000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:background="#fff"
            android:id="@+id/tv_tx_text3"
            android:text="相册"
            android:textColor="#007AFF"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y150" />
    </LinearLayout>

    <View
        android:layout_below="@+id/ll_tx_ll1"
        android:id="@+id/v_tx_view3"
        android:background="#999999"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"/>
    <LinearLayout
        android:background="@drawable/info_et"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_below="@+id/v_tx_view3"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:id="@+id/tv_tx_text4"
            android:text="取消"
            android:textColor="#007AFF"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y120" />
    </LinearLayout>

</RelativeLayout>