<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a110.myhuangchong.MainActivity">


    <RelativeLayout
        android:id="@+id/zu"
        android:layout_width="222dp"
        android:layout_height="match_parent"

        />

    <RelativeLayout
        android:id="@+id/ch"
        android:background="@color/colorAccent"
        android:layout_gravity="left"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        >
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:id="@+id/user"
             >
             <LinearLayout
                 android:layout_marginTop="20dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"

                 >
                 <ImageView
                     android:layout_marginTop="10dp"
                     android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:src="@color/colorPrimary"
                     android:id="@+id/image"

                     />

                 <LinearLayout
                     android:layout_gravity="center"
                     android:layout_marginLeft="20dp"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     >
                 <TextView
                     android:layout_width="90dp"
                     android:layout_height="wrap_content"
                     android:text="米妮捷豹的家"
                     android:id="@+id/name"
                     />

                     <TextView
                         android:layout_width="90dp"
                         android:layout_height="wrap_content"
                         android:text="123456789"
                         />
                 </LinearLayout>
                 <TextView
                     android:layout_marginLeft="20dp"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:text="＞"
                     android:layout_gravity="center"
                     android:textSize="30dp"
                     />

             </LinearLayout>

          <View
              android:layout_marginTop="20dp"
              android:layout_width="wrap_content"
              android:background="#000"
              android:layout_height="1dp"/>


            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/information"
                android:orientation="horizontal"
                >

                <ImageView
                    android:gravity="center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/messages"
                    />
                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="消息"
                    android:textSize="20dp"
                    />

            </LinearLayout>



             <LinearLayout
                 android:layout_marginLeft="20dp"
                 android:layout_marginTop="10dp"
                 android:layout_width="match_parent"
                 android:layout_height="50dp"
                 android:id="@+id/pet"
                 android:orientation="horizontal"
                 >

                 <ImageView
                     android:gravity="center_vertical"
                     android:layout_width="20dp"
                     android:layout_height="20dp"
                     android:src="@mipmap/pet"
                     />
                 <TextView
                     android:gravity="center_vertical"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="宠物"
                     android:textSize="20dp"
                     />
             </LinearLayout>




             <LinearLayout
                 android:layout_marginLeft="20dp"
                 android:layout_marginTop="10dp"
                 android:layout_width="match_parent"
                 android:layout_height="50dp"
                 android:id="@+id/order"
                 android:orientation="horizontal"
                 >

                 <ImageView
                     android:gravity="center_vertical"
                     android:layout_width="20dp"
                     android:layout_height="20dp"
                     android:src="@mipmap/order_details"
                     />
                 <TextView
                     android:gravity="center_vertical"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="订单"
                     android:textSize="20dp"
                     />

             </LinearLayout>





             <LinearLayout
                 android:layout_marginLeft="20dp"
                 android:layout_marginTop="10dp"
                 android:layout_width="match_parent"
                 android:layout_height="50dp"
                 android:id="@+id/wallet"
                 android:orientation="horizontal"
                 >

                 <ImageView
                     android:gravity="center_vertical"
                     android:layout_width="20dp"
                     android:layout_height="20dp"
                     android:src="@mipmap/collection_account"
                     />
                 <TextView
                     android:gravity="center_vertical"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="钱包"
                     android:textSize="20dp"
                     />

             </LinearLayout>






             <LinearLayout
                 android:layout_marginLeft="20dp"
                 android:layout_marginTop="10dp"
                 android:layout_width="match_parent"
                 android:layout_height="50dp"
                 android:id="@+id/know"
                 android:orientation="horizontal"
                 >

                 <ImageView
                     android:gravity="center_vertical"
                     android:layout_width="20dp"
                     android:layout_height="20dp"
                     android:src="@mipmap/about"
                     />
                 <TextView
                  android:gravity="center_vertical"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="需知"
                     android:textSize="20dp"
                     />

             </LinearLayout>





             <LinearLayout
                 android:layout_marginLeft="20dp"
                 android:layout_marginTop="10dp"
                 android:layout_width="match_parent"
                 android:layout_height="50dp"
                 android:id="@+id/setup"
                 android:orientation="horizontal"
                 >

                 <ImageView
                     android:gravity="center_vertical"
                     android:layout_width="20dp"
                     android:layout_height="20dp"
                     android:src="@mipmap/perfect_information"
                     />
                 <TextView
                     android:gravity="center_vertical"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="设置"
                     android:textSize="20dp"
                     />

             </LinearLayout>

        <Button
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请成为寄养家庭"
            />


         </LinearLayout>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
